{
    "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v1.0.0-beta12/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "SumSifter Team Summary Design Survey",
        "version": "pilot",
        "authors": [
            "SCADS SumSifter Team"
        ],
        "date": "2024-06-10",
        "description": "Brief survey on summaries and source designs.",
        "organizations": [
            "WPI"
        ]
    },
    "uiConfig": {
        "contactEmail": "ltharri2@ncsu.edu",
        "helpTextPath": "sumsifter-translation-and-attribution/assets/introduction.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": true,
        "studyEndMsg": "**Thank you for completing the study. You have made SCADS proud!**"
    },
    "baseComponents": {
        "summarySource": {
            "description": "A summary and source.",
            "type": "react-component",
            "path": "sumsifter-translation-and-attribution/SummaryApp.tsx",
            "nextButtonLocation": "sidebar",
            "instructionLocation": "sidebar",
            "response": []
        }
    },
    "components": {
        "introduction": {
            "type": "markdown",
            "path": "sumsifter-translation-and-attribution/assets/introduction.md",
            "response": [
                {
                    "id": "prolificId",
                    "prompt": "Please enter your Name (or initials, or stay anonymous. You do you...)",
                    "required": true,
                    "location": "belowStimulus",
                    "type": "shortText",
                    "placeholder": "Your Name",
                    "paramCapture": "PROLIFIC_PID"
                }
            ]
        },
        "tutorial": {
            "type": "markdown",
            "path": "sumsifter-translation-and-attribution/assets/tutorial.md",
            "nextButtonText": "Begin",
            "response": []
        },
        "feedback-tutorial": {
            "type": "markdown",
            "path": "sumsifter-translation-and-attribution/assets/feedback-tutorial.md",
            "nextButtonText": "Continue",
            "response": []
        },
        "sumsift1": {
            "baseComponent": "summarySource",
            "instruction": "Please provide any feedback on the summary quality, design, and anything else you want to comment on below. Feel free to interact! Try clicking on the blue source links on the left.",
            "parameters": {
                "datasetSource": "interview_chinese",
                "datasetSummary": "summary_english",
                "ids": "id",
                "hallucination": false
            },
            "response": [
                {
                    "id": "response",
                    "prompt": "Answer/Feedback/Thoughts:",
                    "required": true,
                    "location": "sidebar",
                    "type": "longText"
                }
            ]
              

        },     
        "survey": {
            "type": "markdown",
            "path": "sumsifter-translation-and-attribution/assets/survey.md",
            "response": [
                {
                    "id": "surveyAnything",
                    "prompt": "Anything else you'd like to tell us or share at this time?",
                    "required": false,
                    "location": "belowStimulus",
                    "type": "longText",
                    "placeholder": "Enter your answer here."
                }
            ]
        }


    },
    "sequence": {
        "order": "fixed",
        "components": [
            "introduction",
            "tutorial",
            {
                "order": "random",
                "components": [
                    "sumsift1"
                ]
            },

            "survey"
        ]
    }
}
