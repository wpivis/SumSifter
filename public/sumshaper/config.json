{
    "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v1.0.0-beta12/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "SummShaper - Multiple Documents Feedback Study",
        "version": "pilot",
        "authors": [
            "SCADS SumSifter Team"
        ],
        "date": "2024-07-18",
        "description": "Brief survey on summaries and source designs.",
        "organizations": [
            "WPI"
        ]
    },
    "uiConfig": {
        "contactEmail": "ltharri2@ncsu.edu",
        "helpTextPath": "sumshaper/assets/introduction.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": false,
        "studyEndMsg": "**Thank you for completing the study. You have made SCADS proud!**"
    },
    "baseComponents": {
        "summarySource": {
            "description": "A summary and source.",
            "type": "react-component",
            "path": "sumshaper/SummaryApp.tsx",
            "nextButtonLocation": "belowStimulus",
            "instructionLocation": "belowStimulus",
            "response": []
        }
    },
    "components": {
        "introduction": {
            "type": "markdown",
            "path": "sumshaper/assets/introduction.md",
            "response": [
                {
                    "id": "prolificId",
                    "prompt": "Please enter your Name (or initials, or stay anonymous. You do you...)",
                    "required": true,
                    "location": "belowStimulus",
                    "type": "shortText",
                    "placeholder": "Your Name",
                    "paramCapture": "PROLIFIC_PID"
                }
            ]
        },
        "tutorial": {
            "type": "markdown",
            "path": "sumshaper/assets/tutorial.md",
            "nextButtonText": "Begin",
            "response": []
        },
        "summshaper1": {
            "baseComponent": "summarySource",
            "instruction": "",
            "parameters": {
                "documents": ["1_summary.json", "2_summary.json", "3_summary.json", "4_summary.json", "5_summary.json", "6_summary.json", "7_summary.json"],
                "prompt": "Summarize this document in 5 sentences.",
                "hallucination": false
            }, 
        },
        "summshaper2": {
            "baseComponent": "summarySource",
            "instruction": "",
            "parameters": {
                "documents": ["1_cyber_summary.json", "2_cyber_summary.json"],
                "prompt": "Summarize this document in 5 sentences.",
                "hallucination": false
            }
        }
    },
    "sequence": {
        "order": "fixed",
        "components": [
            "introduction",
            "tutorial",
            {
                "order": "random",
                "components": [
                    "summshaper1",
                    "summshaper2"
                ]
            }
        ]
    }
}
