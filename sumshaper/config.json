{
    "$schema": "https://raw.githubusercontent.com/revisit-studies/study/v1.0.0-beta12/src/parser/StudyConfigSchema.json",
    "studyMetadata": {
        "title": "SummShaper - Multiple Documents Feedback Study",
        "version": "pilot",
        "authors": [
            "SCADS SumSifter Team"
        ],
        "date": "2024-07-18",
        "description": "Brief survey on summaries and source designs.",
        "organizations": [
            "WPI"
        ]
    },
    "uiConfig": {
        "contactEmail": "ltharri2@ncsu.edu",
        "helpTextPath": "sumshaper/assets/introduction.md",
        "logoPath": "revisitAssets/revisitLogoSquare.svg",
        "withProgressBar": true,
        "autoDownloadStudy": false,
        "sidebar": false,
        "studyEndMsg": "**Thank you for completing the study. You have made SCADS proud!**"
    },
    "baseComponents": {
        "summarySource": {
            "description": "A summary and source.",
            "type": "react-component",
            "path": "sumshaper/SummaryApp.tsx",
            "nextButtonLocation": "belowStimulus",
            "instructionLocation": "belowStimulus",
            "response": []
        }
    },
    "components": {
        "introduction": {
            "type": "markdown",
            "path": "sumshaper/assets/introduction.md",
            "response": [
                {
                    "id": "prolificId",
                    "prompt": "Please enter your Name (or initials, or stay anonymous. You do you...)",
                    "required": true,
                    "location": "belowStimulus",
                    "type": "shortText",
                    "placeholder": "Your Name",
                    "paramCapture": "PROLIFIC_PID"
                }
            ]
        },

        "Intel-Multidoc": {
            "baseComponent": "summarySource",
            "instruction": "",
            "parameters": {
                "documents": ["1_summary.json", "2_summary.json", "3_summary.json", "4_summary.json", "5_summary.json", "6_summary.json", "7_summary.json"],
                "prompt": "Summarize this document in 5 sentences.",
                "hallucination": false
            } 
        },
        "Cyber-Multidoc": {
            "baseComponent": "summarySource",
            "instruction": "",
            "parameters": {
                "documents": ["1_cyber_summary.json", "2_cyber_summary.json", "3_cyber_summary.json", "4_cyber_summary.json", "5_cyber_summary.json"],
                "prompt": "Summarize this document in 5 sentences.",
                "hallucination": false
            }
        },
        "Chinese-Transcript-Multidoc": {
            "baseComponent": "summarySource",
            "instruction": "",
            "parameters": {
                "documents": ["1_interview_summary.json", "2_interview_summary.json", "3_interview_summary.json", "4_interview_summary.json"],
                "prompt": "Summarize this document in 5 sentences.",
                "hallucination": false
            }
        }, 
        "Farsi-Russian-emails-Multidoc": {
            "baseComponent": "summarySource",
            "instruction": "",
            "parameters": {
                "documents": ["1_farsi_email.json", "2_farsi_email.json", "3_farsi_email.json", "4_farsi_email.json", "5_farsi_email.json", "6_farsi_email.json"],
                "prompt": "Summarize this document in 5 sentences. ",
                "hallucination": false
            }
        }, 
        "survey": {
            "type": "markdown",
            "path": "sumshaper/assets/survey.md",
            "response": [
                {
                    "id": "surveyAnything",
                    "prompt": "Please share any feedback or comments you have about the work. We would love to hear from you! ",
                    "required": false,
                    "location": "belowStimulus",
                    "type": "longText",
                    "placeholder": "Enter your feedback here. The textbox will expand as you type."
                }
            ]
        }
    },
    "sequence": {
        "order": "fixed",
        "components": [
            "introduction",
            {
                "order": "fixed",
                "components": [
                    "Intel-Multidoc",
                    "Cyber-Multidoc",
                    "Chinese-Transcript-Multidoc",
                    "Farsi-Russian-emails-Multidoc", 
                    "survey"

                
                ]
            }
        ]
    }
}